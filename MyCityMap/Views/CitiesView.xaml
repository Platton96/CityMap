<Page
    x:Name="userControl"
    x:Class="MyCityMap.Views.CitiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyCityMap.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:customControl="using:MyCityMap.CustomControls"
    xmlns:models="using:MyCityMap.Models"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <customControl:NavigationControl NavigationTitle="Cities"/>
        <Button x:Name="CitiesMapBtn"
                Style="{StaticResource ButtonMapStyle}"
                Visibility="{x:Bind ViewModel.IsCitiesMapButtonVisible, Mode=OneWay}">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Assets/BingLogo.png"/>
                    <TextBlock Style="{StaticResource TitleButtonMapTextStyle}"/>
                </StackPanel>

            </Button.Content>
        </Button>

        <GridView x:Name="GridViewCities"
                  Grid.Row="1"
                  Style="{StaticResource gridViewCities}"
                  ItemsSource="{x:Bind ViewModel.Cities, Mode=OneWay}"
                  ItemClick="OnCitiesListItemClick">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:City">
                    <customControl:CityControl ImageUrl="{x:Bind ImageUrl, Mode=OneWay}"
                                               TitleImage="{x:Bind Name, Mode=OneWay}"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <TextBlock Grid.Row="1"
                   Text="{x:Bind ViewModel.NoDataText, Mode=OneWay}"
                   Style="{StaticResource NoDataTextStyle}"/>
    
        <ProgressRing Grid.Row="1"
                      x:Name="LoadingProgressRing"
                      Style="{StaticResource LoadingProgressRingStyle}"
                      IsActive="{x:Bind ViewModel.IsActiveLoadingProgressRing, Mode=OneWay}"/>
    </Grid>
</Page>
